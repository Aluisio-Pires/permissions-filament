{
    "name": "aluisio-pires/permissions-filament",
    "description": "Permission handling for Laravel 8.0 and up",
    "license": "MIT",
    "keywords": [
        "spatie",
        "laravel-permission",
        "filament",
        "permissions-filament",
        "aluisio",
        "aluisio-pires",
        "laravel",
        "permission",
        "permissions",
        "roles",
        "acl",
        "rbac",
        "security"
    ],
    "authors": [
        {
            "name": "Aluisio Pires",
            "email": "aluisiopireseng@gmail.com",
            "homepage": "https://aluisiopires.com",
            "role": "Laravel Architect"
        }
    ],
    "homepage": "https://github.com/aluisio-pires/permissions-filament",
    "require": {
        "php": "^8.0",
        "filament/filament": "^3.2",
        "illuminate/auth": "^8.12|^9.0|^10.0|^11.0|^12.0",
        "illuminate/container": "^8.12|^9.0|^10.0|^11.0|^12.0",
        "illuminate/contracts": "^8.12|^9.0|^10.0|^11.0|^12.0",
        "illuminate/database": "^8.12|^9.0|^10.0|^11.0|^12.0",
        "spatie/laravel-permission": "^6.15"
    },
    "require-dev": {
        "laravel/passport": "^11.0|^12.0",
        "laravel/pint": "^1.21",
        "orchestra/testbench": "^6.23|^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.4|^10.1|^11.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "AluisioPires\\Permission\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "6.x-dev",
            "dev-master": "6.x-dev"
        },
        "laravel": {
            "providers": [
                "AluisioPires\\Permission\\PermissionServiceProvider"
            ]
        }
    },
    "scripts": {
        "format": "pint"
    }
}
